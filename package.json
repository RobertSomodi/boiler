{
  "name": "mongo-ts-container",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "npx tsc && npx copyfiles -u 1 src/app/**/*.html src/app/**/*.css src/app/public/**/*.* src/app/views/**/*.* dist/",
    "watch": "tsc -w -p ./",
    "document": "npx typedoc",
    "lint": "npx eslint --ext=.ts .",
    "format": "prettier --write \"**/*.{ts,js,css,md}\"",
    "test": "npx tsc && ava --verbose",
    "start": "node ./dist/server.js",
    "start-dev": "npm run format && npm run lint && npx cross-env NODE_ENV=development nodemon ./dist/server.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cross-env": "^6.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "helmet": "^3.21.2",
    "method-override": "^3.0.0",
    "opentracing": "^0.14.4",
    "prom-client": "^11.5.3",
    "swagger-ui-express": "^4.1.2",
    "winston": "^3.2.1",
    "xss-clean": "^0.1.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/node": "^12.12.8",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "ava": "^2.4.0",
    "eslint": "^6.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "typedoc": "^0.15.2",
    "typescript": "^3.7.2"
  }
}
